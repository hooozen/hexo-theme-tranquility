<!DOCTYPE html>
<html lang="zh-cn">
  <head>
    <meta charset="utf8" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <title>
      {% if is_home() %}
        {{ config.title }}
      {% elif is_post() %}
        {{ page.title }} | {{ config.title }}
      {% elif is_tag() %}
        {{ page.tag }} | {{ config.title }}
      {% else %}
        {{ page.title }} | {{ config.title }}
      {% endif %}
    </title>
    <meta name="description" content="{{ config.description }}" />
    <meta name="keywords" content="{{ config.keywords }}" />
    {% if theme.favicon.apple_touch_icon %}
      <link rel="apple-touch-icon"
            sizes="180x180"
            href="{{ url_for(theme.favicon.apple_touch_icon) }}" />
    {% endif %}
    {% if theme.favicon.medium %}
      <link rel="icon"
            type="image/png"
            sizes="32x32"
            href="{{ url_for(theme.favicon.medium) }}" />
    {% endif %}
    {% if theme.favicon.small %}
      <link rel="icon"
            type="image/png"
            sizes="16x16"
            href="{{ url_for(theme.favicon.small) }}" />
    {% endif %}
    {% if theme.favicon.safari_pinned_tab %}
      <link rel="mask-icon"
            href="{{ url_for(theme.favicon.safari_pinned_tab) }}"
            color="{{ theme.android_chrome_color }}" />
    {% endif %}
    {% if theme.favicon.android_manifest %}
      <link rel="manifest" href="{{ url_for(theme.favicon.android_manifest) }}" />
    {% endif %}
    {% if theme.zh_font.enable %}
      {% include('./components/font.njk') %}
    {% endif %}
    <link rel="stylesheet"
          type="text/css"
          href='{{ url_for("/css/layout.css") }}' />
    {% if theme.baidu_analytics %}
      <script>
        var _hmt = _hmt || [];
        (function () {
          var hm = document.createElement("script");
          hm.src = "https://hm.baidu.com/hm.js?{{theme.baidu_analytics}}";
          var s = document.getElementsByTagName("script")[0];
          s
            .parentNode
            .insertBefore(hm, s);
        })();
      </script>
    {% endif %}
    <script src="https://kit.fontawesome.com/c4ba0a82e6.js" crossorigin="anonymous"></script>
    {% block link %}
    {% endblock link %}
  </head>
  <body>
    {% if theme.algolia and theme.algolia.enable %}
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@3" />
    {% elif theme.search and theme.search.enable %}
      {% include("./components/search-main.njk") %}
    {% endif %}
    <div class="head">
      <div class="nav">
        <a href='{{ url_for("/") }}' class="nav-logo">
          <img alt="logo" height="60px" width="60px" src="{{ url_for(theme.logo) }}" />
        </a>
        <input id="navBtn" type="checkbox" />
        <div class="nav-right">
          {% if theme.algolia and theme.algolia.enable %}
            <div class="search-outer" id="algolia-search"></div>
          {% elif theme.search and theme.search.enable %}
            <div class="search-outer">{% include("./components/search-btn.njk") %}</div>
          {% endif %}
          <div class="nav-menu">
            {% if theme.subpage.enable %}
              {% for nav in theme.subpage.pages %}
                <a class="nav-menu-item" href="{{ url_for(nav.path or nav.name) }}">{{ nav.title }}</a>
              {% endfor %}
            {% else %}
              <a class="nav-menu-item" href='{{ url_for("/blog/") }}'>博客</a>
            {% endif %}
            {% if theme.cv.enable and theme.cv.showInNav %}<a class="nav-menu-item" href='{{ url_for("/cv/") }}'>简历</a>{% endif %}
          </div>
        </div>
        <label class="nav-btn" for="navBtn"></label>
      </div>
    </div>
    <div class="body">
      {% block body %}
      {% endblock body %}
    </div>
    <div class="foot">
      <div class="foot-inner">
        <div class="foot__head">
          {% for line in theme.foot.title %}
            <div class="foot-line">
              {% for word in line %}<div class="matts">{{ word }}</div>{% endfor %}
            </div>
          {% endfor %}
        </div>
        <div class="foot__body">
          {% if theme.links %}
            <div class="foot-item">
              <div class="foot-item__head">朋友</div>
              <div class="foot-item__body">
                {% for link in theme.links %}
                  <div class="text">
                    <img alt="link" height="20px" width="20px" src="{{ url_for("/images/icon/icon-link.svg") }}" />
                    <a class="foot-link" href="{{ link.url }}">{{ link.name }}</a>
                  </div>
                {% endfor %}
                <div class="text">
                  <img alt="link" height="20px" width="20px" src="{{ url_for("/images/icon/icon-link+.svg") }}" />
                  <a class="foot-link"
                     href="mailto:{{ theme.email }}?subject=%E7%94%B3%E8%AF%B7%20Hozen.site%20%E7%9A%84%E5%8F%8B%E9%93%BE%E4%BD%8D%E7%BD%AE">
                  申请友链</a>
                </div>
              </div>
            </div>
          {% endif %}
          {% if theme.social %}
            <div class="foot-item">
              <div class="foot-item__head">账号</div>
              <div class="foot-item__body">
                {% for link in theme.social %}
                  <div class="text">
                    <img alt="link" height="20px" width="20px" src="{{ url_for(link.icon) }}" />
                    <a class="foot-link" href="{{ link.url }}">{{ link.name }}</a>
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
          <div class="foot-item">
            <div class="foot-item__head">联系</div>
            <div class="foot-item__body">
              <div class="text">
                <img alt="link" height="20px" width="20px" src="{{ url_for("/images/icon/icon-email.svg") }}" />
                <a class="foot-link" href="mailto:{{ theme.email }}">{{ theme.email }}</a>
              </div>
            </div>
          </div>
        </div>
        <div class="copyright">
          <a href="{{ config.url }}">{{ config.title }}</a> &nbsp;|&nbsp;由&nbsp;<a href="https://hexo.io/">Hexo</a>&nbsp;及&nbsp;
          <svg width="20" height="20" viewBox="0 0 725 725">
            <path fill-rule="evenodd" fill="rgb(221, 221, 221)" d="M145.870,236.632 L396.955,103.578 L431.292,419.44 L156.600,522.53 L145.870,236.632 Z" />
            <path fill-rule="evenodd" fill="rgb(159, 159, 159)" d="M396.955,103.578 L564.345,234.486 L611.558,513.469 L431.292,419.44 L396.955,103.578 Z" />
            <path fill-rule="evenodd" fill="rgb(0, 0, 0)" d="M431.292,419.44 L611.558,513.469 L358.327,595.18 L156.600,522.53 L431.292,419.44 Z" />
          </svg>
          <a href="https://github.com/hooozen/hexo-theme-tranquility">致远</a>&nbsp;驱动
        </div>
      </div>
    </div>
    {% if theme.mathjax %}
      <script src="https://unpkg.com/js-polyfills@0.1.43/es6.js"></script>
      <script id="MathJax-script"
              async
              src="https://www.unpkg.com/mathjax@3.2.2/es5/tex-mml-chtml.js"></script>
    {% endif %}
    {% if theme.algolia and theme.algolia.enable %}
      <script src="https://cdn.jsdelivr.net/npm/@docsearch/js@3"></script>
      <script type="text/javascript">
        docsearch({
          appId: '{{theme.algolia.appId}}',
          apiKey: '{{theme.algolia.apiKey}}',
          indexName: '{{theme.algolia.indexName}}',
          insights: '{{theme.algolia.insights}}',
          container: 'div#algolia-search',
          debug: '{{theme.algolia.debug}}'
        });
      </script>
    {% elif theme.search and theme.search.enable %}
      <script src="{{url_for('js/search.js')}}"></script>
      <script>searchInitialize("{{url_for(theme.search.path)}}")</script>
    {% endif %}
    {% if theme.codeblock.copy_button.enable %}
      <script src="{{ url_for('js/copy-code.js') }}"></script>
    {% endif %}
    {% block script %}
    {% endblock script %}
  </body>
</html>
